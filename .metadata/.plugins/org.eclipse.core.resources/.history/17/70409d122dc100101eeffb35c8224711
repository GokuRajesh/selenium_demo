package day2;

import org.openqa.selenium.*;

public class relative_locator {

	public static void main(String[] args) throws InterruptedException {
		// TODO Auto-generated method stub
		WebDriver driver=new EdgeDriver();
		driver.get("https://demowebshop.tricentis.com");
		driver.findElement(By.linkText("Log in")).click();
		WebElement lblEmail=
				driver.findElement(By.xpath("//label[@for='Email']"));
		WebElement txtuser=
				driver.findElement(with(By.tagName("input")).toRightOf(lblEmail));
		txtuser.sendKeys("abf");
		WebElement txtpass=
				driver.findElement(with(By.tagName("input")).below(txtuser));
		txtpass.sendKeys("wefbiwe");
		Thread.sleep(5000);
		driver.quit();
	}

}
